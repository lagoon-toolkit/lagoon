@inherits DemoPage

<div class="row">
    <div class="col-10"><LgTitle Text="#grdPagingTitle" /></div>
    <div class="col-2 text-right"><LgHyperlink Uri="@DocumentationLink()" Target="_blank"><LgButton Text="#lblDoc" /></LgHyperlink></div>
</div>
<!--
---- Dico.xml ----
<string key="grdLblRows" fr="Ligne(s) : {1} / {0}" en="Rows(s): {1} / {0}"/>
-->
<LgGridView Title="#grdLblRows" StateId="gvDemoPaging" Items="Data" TItem="GridViewData" Features="GridFeature.Default | GridFeature.Paging"
            PaginationSizeSelector="@Pagination" PaginationButtonCount="5">
    <Columns Context="GridViewData">
        <LgGridNumericColumn @bind-Value="GridViewData.Id" Title="Id" Resizable="false"></LgGridNumericColumn>
        <LgGridColumn @bind-Value="GridViewData.Name" Title="#grdNameCol" Resizable="false" AllowHide="false"></LgGridColumn>
        <LgGridColumn @bind-Value="GridViewData.Surname" Title="#grdSurnameCol" Resizable="false" AllowHide="false"></LgGridColumn>
        <LgGridDateColumn @bind-Value="GridViewData.BirthDate" Title="#grdBirthDateCol" DisplayFormat="yyyy-MM-dd" Resizable="false"></LgGridDateColumn>
        <LgGridNumericColumn @bind-Value="GridViewData.Weight" Title="#grdWeightCol" Resizable="false"></LgGridNumericColumn>
        <LgGridEnumColumn @bind-Value="GridViewData.HairColor" Title="#grdHairColorCol" Resizable="false"></LgGridEnumColumn>
        <LgGridColorColumn @bind-Value="GridViewData.FavoriteColor" Title="#grdFavColorCol" Resizable="false"></LgGridColorColumn>
        <LgGridColumn @bind-Value="GridViewData.Mail" Title="#grdMailCol" Resizable="false"></LgGridColumn>
        <LgGridBooleanColumn @bind-Value="GridViewData.HasGlasses" Title="#grdGlassesCol" Resizable="false"></LgGridBooleanColumn>
        <LgGridNumericColumn @bind-Value="GridViewData.PrefixSuffixGrid" Resizable="false" Title="#grdNumCol" PrefixType="InputLabelType.IconName" Prefix="@IconNames.About" SuffixType="InputLabelType.Text" Suffix="Texte"></LgGridNumericColumn>
    </Columns>
</LgGridView>

<SourceCode SourceCodeProvider="GetSourceCodeProvider()" />

