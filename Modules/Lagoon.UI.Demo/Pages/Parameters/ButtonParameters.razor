<LgSelect CssClass="@CssClass" Label="Button Size" ShowSearchBox=true @bind-Value="Size" OnChange="OnChangeButtonSizeAsync">
    <Items>
        @foreach (var size in Enum.GetValues(typeof(ButtonSize)))
        {<LgOptionListItem Text="@(Enum.GetName(typeof(ButtonSize), size))" Value="@((ButtonSize)size)"></LgOptionListItem>}
    </Items>
</LgSelect>

