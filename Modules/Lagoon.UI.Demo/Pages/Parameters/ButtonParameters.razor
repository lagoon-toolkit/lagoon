@code {

    public ButtonSize Size { get; set; } = ButtonSize.Medium;
    public ButtonKind Kind { get; set; } = ButtonKind.Primary;

    [Parameter]
    public string CssClass { get; set; }

    [Parameter]
    public EventCallback<ButtonSize> OnButtonSizeEdition { get; set; }

    [Parameter]
    public EventCallback<ButtonKind> OnButtonKindEdition { get; set; }


    public async Task OnChangeButtonSizeAsync()
    {
        await OnButtonSizeEdition.InvokeAsync(Size);
    }

    public async Task OnChangeButtonKindAsync()
    {
        await OnButtonKindEdition.InvokeAsync(Kind);
    }

}
