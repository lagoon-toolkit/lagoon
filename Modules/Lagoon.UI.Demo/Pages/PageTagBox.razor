@inherits DemoPage

<LgTitle Text="TagBox" CssClass="d-inline-block"></LgTitle>
<LgHyperlink Uri="@DocumentationLink()" Target="_blank" CssClass="mb-2 d-inline-block float-right"><LgButton Text="#lblDoc" /></LgHyperlink>

<LgFrame Title="#lblSample">
    <LgTagBox Placeholder="Add tags"
              CssClass="col-md-6 col-sm-12"
              @bind-Value="@TagValue"
              Label="@Label"
              Disabled="@Disable"
              ReadOnly="@Readonly"
              OnChange="OnChangeValue" />
</LgFrame>

<DemoParameters HasText="true"
            HasDisable="true"
            HasReadonly="true"
            OnTextEdition="TextHasChanged"
            OnDisableEdition="DisableHasChanged"
            OnReadonlyEdition="ReadonlyHasChanged">
</DemoParameters>

<SourceCode SourceCodeProvider="GetSourceCodeProvider()" />
