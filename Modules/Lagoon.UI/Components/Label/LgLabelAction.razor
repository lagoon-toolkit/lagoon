@namespace Lagoon.UI.Components

@inherits LgComponentBase

<div class="@GetClassAttribute()" Disabled="@Disabled">
        <LgLabel Tooltip="@Tooltip" TooltipIsHtml="TooltipIsHtml" Text="@Label.CheckTranslate()"></LgLabel>
        @if (MultiLine)
        {
            <LgButton Kind="@ButtonKind" Text="@ButtonText" IconName="@ButtonIconName" Disabled="@Disabled" OnClick="@OnClick"></LgButton>
            <p class="labelCaption-multi" >@Value.CheckTranslate()</p>
        }
        else
        {
            <span>@Value.CheckTranslate()</span>
            <LgButton Kind="@ButtonKind" Text="@ButtonText" IconName="@ButtonIconName" Disabled="@Disabled" OnClick="@OnClick"></LgButton>
        }

</div>
